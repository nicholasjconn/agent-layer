{
  "version": 1,
  "defaults": {
    "vscodeEnvFile": "${workspaceFolder}/.agent-layer/.env",
    "trust": true
  },
  "servers": [
    {
      "name": "agent-layer",
      "enabled": true,
      "clients": [
        "claude",
        "gemini"
      ],
      "transport": "stdio",
      "command": "node",
      "args": [
        "./.agent-layer/src/cli.mjs",
        "--mcp-prompts",
        "--parent-root",
        ".",
        "--agent-layer-root",
        "./.agent-layer"
      ],
      "envVars": [],
      "trust": true
    },
    {
      "name": "context7",
      "enabled": true,
      "transport": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "envVars": [
        "CONTEXT7_API_KEY"
      ],
      "trust": true
    },
    {
      "name": "github",
      "enabled": true,
      "transport": "http",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {},
      "bearerTokenEnvVar": "GITHUB_PERSONAL_ACCESS_TOKEN",
      "trust": true
    },
    {
      "name": "tavily",
      "enabled": true,
      "transport": "http",
      "url": "https://mcp.tavily.com/mcp/?tavilyApiKey=${TAVILY_API_KEY}",
      "headers": {},
      "trust": true
    }
  ]
}
