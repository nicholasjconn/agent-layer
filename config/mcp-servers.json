{
  "version": 1,
  "defaults": {
    "vscodeEnvFile": "${workspaceFolder}/.agent-layer/.env",
    "trust": false
  },
  "servers": [
    {
      "name": "agent-layer",
      "enabled": true,
      "transport": "stdio",
      "command": "node",
      "args": [
        "./.agent-layer/src/mcp/agent-layer-prompts/server.mjs"
      ],
      "envVars": [],
      "trust": true
    },
    {
      "name": "context7",
      "enabled": true,
      "transport": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "envVars": [
        "CONTEXT7_API_KEY"
      ],
      "trust": true
    },
    {
      "name": "github",
      "enabled": true,
      "transport": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "envVars": [
        "GITHUB_TOKEN"
      ],
      "trust": true
    }
  ]
}
